<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ClubMemberMapper">

    <select id="selectAll" resultType="com.example.entity.ClubMember">
        select * from `club_member`
        order by id desc
    </select>

    <select id="selectByClubAndStudent" resultType="com.example.entity.ClubMember">
        select * from `club_member`
        <where>
            club_id=#{clubId} and student_id=#{studentId}
        </where>
        order by id desc
    </select>

    <insert id="insert">
        insert into `club_member`(club_id,student_id,role,join_time)
        values(#{clubId},#{studentId},#{role},#{joinTime})
    </insert>

    <update id="update">
        update `club_member` set club_id=#{clubId},student_id=#{studentId},role=#{role},join_time=#{joinTime}} where
        id=#{id}
    </update>

</mapper>