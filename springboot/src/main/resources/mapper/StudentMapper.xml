<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StudentMapper">


    <select id="selectAll" resultType="com.example.entity.Student">
        select * from `student`
        <where>
            <if test="name != null and name !='' ">name like '%${name}%'</if>
            <if test="username != null and username !='' ">and username like '%${username}%'</if>
            <if test="ids != null and ids != ''">
                and id in
                <foreach item="id" collection="idArr" separator="," open="(" close=")">
                    #{id}
                </foreach>
            </if>
        </where>
        order by id desc
    </select>

    <insert id="insert">
        insert into `student`(username,password,name,role,avatar,major,grade,college)
        values(#{username},#{password},#{name},#{role},#{avatar},#{major},#{grade},#{college})
    </insert>

    <update id="update">
        update `student` set username=#{username},password=#{password},name=#{name},
        role= #{role},avatar= #{avatar},major=#{major},grade=#{grade},college=#{college} where
        id=#{id}
    </update>

</mapper>